{
  "bindings": [
    {
      "authLevel": "function",
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "methods": [
        "post"
      ],
      "route":"claim/{id}"
    },
    {
      "type": "http",
      "direction": "out",
      "name": "res"
    },
    {
      "type": "cosmosDB",
      "name": "claimItemIn",
      "databaseName": "yaron",
      "collectionName": "items",
      "connectionStringSetting": "CosmosDbConnectionString",
      "direction": "in",
      "Id": "{id}",
      "PartitionKey": "{id}"
    },
    {
      "name": "claimItemOut",
      "type": "cosmosDB",
      "databaseName": "yaron",
      "collectionName": "items",
      "createIfNotExists": true,
      "connectionStringSetting": "CosmosDbConnectionString",
      "direction": "out"
    }
  ]
}